<Window x:Class="BooksDb.AuthorsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksDb"
        mc:Ignorable="d"
        Title="AuthorsDialog" Height="375.873" Width="514.906">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="156,45,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="205,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="355,49,0,0" VerticalAlignment="Top" Width="75"/>
        <ListView HorizontalAlignment="Left" Height="175" Margin="166,94,0,0" VerticalAlignment="Top" Width="181">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="175" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Save authors to book" HorizontalAlignment="Left" Margin="192,300,0,0" VerticalAlignment="Top" Width="133"/>

    </Grid>
</Window>
